{
  "name": "galaxy",
  "version": "1.0.0",
  "description": "strategy game",
  "main": "index.html",
  "scripts": {
    "start": "parcel index.html --port 8000",
    "build": "parcel build index.html"
  },
  "repository": "https://github.com/peacefullatom/galaxy.git",
  "author": "Yuriy Markov <peacefullatom@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "sass": "^1.26.1",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "jsxSingleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier/@typescript-eslint",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "ecmaFeatures": {
      "jsx": true
    },
    "rules": {
      "react/prop-types": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "dependencies": {
    "eslint-plugin-react": "^7.18.3"
  }
}
